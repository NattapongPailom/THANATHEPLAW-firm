rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is client (has lead record)
    function isClient() {
      return request.auth != null || request.query.phone != null;
    }

    // ===== LEADS COLLECTION =====
    match /leads/{document=**} {
      // Only admins can write/delete leads
      allow create, update, delete: if isAdmin();
      
      // Clients can read their own lead by phone number in query
      // Admins can read all leads
      allow read: if isAdmin() || 
                     (request.auth != null);
    }

    // ===== CASE FILES COLLECTION - HIGHLY SENSITIVE =====
    match /case_files/{document=**} {
      // Only admins can write/delete files
      allow create, update, delete: if isAdmin();
      
      // Clients can only read files related to their case (by leadId)
      allow read: if isAdmin();
      
      // TODO: Implement proper client access control
      // allow read: if request.auth != null && 
      //                document.data.leadId == request.auth.uid;
    }

    // ===== NEWS COLLECTION =====
    match /news/{document=**} {
      // Only admins can write/delete
      allow create, update, delete: if isAdmin();
      
      // Everyone can read published news
      allow read: if resource.data.published == true;
    }

    // ===== CASE STUDIES COLLECTION =====
    match /case_studies/{document=**} {
      // Only admins can write/delete
      allow create, update, delete: if isAdmin();
      
      // Everyone can read published case studies
      allow read: if resource.data.published == true;
    }

    // ===== ACTIVITY LOGS COLLECTION - FOR AUDITING =====
    match /activity_logs/{document=**} {
      // Only admins can write logs
      allow create: if isAdmin();
      
      // Only admins can read logs
      allow read: if isAdmin();
      
      // Prevent any modifications to logs (immutable audit trail)
      allow update, delete: if false;
    }

    // ===== ADMIN USERS COLLECTION =====
    match /admins/{document=**} {
      // Only admins can manage other admins
      allow read, write: if isAdmin();
    }

    // ===== DEFAULT DENY ALL =====
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
