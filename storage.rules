rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper: Check file size (max 100MB)
    function isValidSize() {
      return request.resource.size <= 100 * 1024 * 1024;
    }

    // Case files - allow uploads without strict auth
    // This prevents CORS issues
    match /case_files/{allPaths=**} {
      allow read: if true;
      allow create: if isValidSize();
      allow update, delete: if false;
    }

    // Public assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
